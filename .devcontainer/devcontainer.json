{
	"name": "${localWorkspaceFolderBasename}",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"runArgs": [
		"--name", "${localWorkspaceFolderBasename}",
		// "${localEnv:DEVCONTAINER_GPU_ARG}",
		"--ipc=host",
		"--ulimit", "memlock=-1",
		"--ulimit", "stack=67108864",
		"--security-opt", "seccomp=unconfined",
		"-e", "DISPLAY=${env:DISPLAY}"
	],
	"mounts": [
		"source=${env:HOME}/.aws,target=/root/.aws,type=bind",
		"source=${env:HOME}/.ssh,target=/root/.ssh,type=bind"
		// "source=/mnt/data,target=/workspace/data/,type=bind"
	],
	"containerEnv": {
		"AWS_PROFILE": "default"
	},
	"waitFor": "onCreateCommand",
	"updateContentCommand": "apt-get update && apt-get install -y git && pip install -r requirements.txt",
	"customizations": {
		"codespaces": {
			"openFiles": []
		},
		"vscode": {
			"extensions": [
				"ms-toolsai.jupyter",
				"ms-python.python",
				"ms-toolsai.jupyter-renderers",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"ms-azuretools.vscode-docker",
				"ms-vsliveshare.vsliveshare",
				"github.copilot",
				"github.vscode-pull-request-github",
				"ms-toolsai.vscode-jupyter-powertoys"
			]
		}
	}
}
